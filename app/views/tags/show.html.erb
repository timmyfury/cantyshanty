<% content_for :canonical do %><%= tag_url(:slug => params[:slug]) %><% end %>

<% content_for :title do %>Tagged: <%= params[:slug] %><% end %>

<% content_for :content do %>
	<article class="info">
		<h2>Tagged: <%= params[:slug] %></h2>
	</article>

	<% @posts.each do |post| %>
		<%= render :partial => "layouts/post", :locals => { :post => post, :format => :large, :links => 'public' } %>
	<% end %>
<% end %>
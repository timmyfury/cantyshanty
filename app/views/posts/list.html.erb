<div class="entry image-cloud">
	<h2>
	    <%= @status.capitalize %>
	    <% if @status == 'search' && params[:q] %>
            <span><%= page_entries_info @posts %> of <%= @search_count %> for "<%= params[:q] %>"</span>
    	<% end %>
	</h2>

	<% if @posts %>
    	<% @posts.each do |post| %>
    		<div class="image">
    			<%= link_to image_tag(post.image.url(:medium)), post %>
    		</div>
    	<% end %>
	<% end %>
</div>


<div id="footer">
	<% if @status == 'backlog' %>
	    <a href="<%= posts_url %>">Load new backlog images</a>
	<% else %>
	    <% if @posts %>
		    <%= will_paginate @posts %>
		<% end %>
	<% end %>
</div>

<div class="navigation">
	<ul>
		<li class="<% if @status == 'drafts' %>active<% end %>"><a href="<%= list_url(:status => 'drafts') %>">Drafts (<%= @draft_count %>)</a></li>
		<li class="<% if @status == 'backlog' %>active<% end %>"><a href="<%= list_url(:status => 'backlog') %>">Backlog (<%= @backlog_count %>)</a></li>
		<li class="<% if @status == 'published' %>active<% end %>"><a href="<%= list_url(:status => 'published') %>">Published (<%= @published_count %>)</a></li>
		<li><%= link_to 'Upload new image', new_post_path %></li>
	</ul>
</div>

<div class="entry">
	<h2><%= @status.capitalize %></h2>
	<% @posts.each do |post| %>
		<div style="width:400px;height:400px; float: left; padding: 10px; text-align:center">
			<%= link_to image_tag(post.image.url(:medium)), post %>
		</div>
	<% end %>
</div>


<div id="pagination">
	<%= will_paginate @posts %>
</div>

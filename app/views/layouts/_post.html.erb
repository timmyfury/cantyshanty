<article class="<%= format %> <%= links %>" style="width: <%= post.image.width(format) - 80 %>px;">
	<% if post.title %>
		<% if links == 'public' and post.slug %>
			<h2><a href="<%= short_url(:slug => post.slug) %>"><%= post.title %></a></h2>
		<% elsif links == 'admin' %>
			<h2><a href="<%= post_url(post) %>"><%= post.title %></a></h2>
	    <% else %>
			<h2><%= post.title %></h2>
		<% end %>
	<% end %>

	<div class="image">
		<% if links == 'public' and post.slug %>
			<a href="<%= short_url(:slug => post.slug) %>" title="<%= post.title %>"><%= image_tag post.image.url(format), :alt => post.title, :size => post.image.image_size(format) %></a>
		<% elsif links == 'admin' %>
			<a href="<%= post_url(post) %>" title="<%= post.title %>"><%= image_tag post.image.url(format), :alt => post.title, :size => post.image.image_size(format) %></a>
		<% else %>
			<%= image_tag post.image.url(format), :alt => post.title, :size => post.image.image_size(format) %>
		<% end %>
	</div>

	<% if post.tags.size > 0 %>
		<ul class="tags">
			<% post.tags.each do |tag| %><li><a href="<%= tag_url(:slug => tag.name) %>"><%= tag %></a></li> <% end %>
		</ul>
	<% end %>

	<% if post.sourced %><p class="source"><em>source:</em> <%= link_to post.source_title, post.source_url %></p><% end %>
	
	<% if post.slug %><p class="permanent"><a href="<%= short_url(:slug => post.slug) %>">Permalink</a></p><% end %>
</article>


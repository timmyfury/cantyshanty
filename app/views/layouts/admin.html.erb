<% content_for :content do %>

<div class="navigation">
	<ul>
		<li class="<% if @status == 'drafts' %>active<% end %>"><a href="<%= list_url(:status => 'drafts') %>">Drafts (<%= @draft_count %>)</a></li>
		<li class="<% if @status == 'backlog' %>active<% end %>"><a href="<%= list_url(:status => 'backlog') %>">Backlog (<%= @backlog_count %>)</a></li>
		<li class="<% if @status == 'published' %>active<% end %>"><a href="<%= list_url(:status => 'published') %>">Published (<%= @published_count %>)</a></li>
		<li class="<% if @status == 'upload' %>active<% end %>"><a href="<%= new_post_url %>">Upload</a></li>
	</ul>
</div>

<div id="content">
	<%= yield %>
</div>

<script src="/jquery-1.7.min.js" type="text/javascript"></script>
<script src="/admin.js" type="text/javascript"></script>

<% end %>

<%= render :template => 'layouts/application' %>
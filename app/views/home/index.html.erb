<% @posts.each do |post| %>
	<div class="entry">
		<h2><a href="<%= short_url(:slug => post.slug) %>"><%= post.title %></a></h2>
		<ul><% post.tags.each do |tag| %><li><a href="<%= tag_url(:slug => tag.name) %>"><%= tag %></a></li><% end %></ul>
		<%= image_tag post.image.url(:large) %>
	</div>
<% end %>

<div id="pagination">
	<%= will_paginate @posts %>
	<p>&copy; Images are copyright of their respective owners. I just don't know who they are.</p>
</div>

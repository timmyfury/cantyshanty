<% content_for :canonical do %><%= root_url %><% end %>

<% content_for :content do %>
	<% if params[:q] -%>
	<article class="info">
		<h2>Search results for "<%= params[:q] %>"</h2>
	</article>
	<% end -%>

	<% @posts.each do |post| %>
		<%= render :partial => "layouts/post", :locals => { :post => post, :format => :large, :links => 'public' } %>
	<% end %>
<% end %>
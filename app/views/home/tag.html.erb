<% content_for :canonical do %><%= tag_url(:slug => params[:slug]) %><% end %>

<% content_for :title do %>Tagged: <%= params[:slug] %><% end %>

<% content_for :content do %>
	<h2><%= @title %></h2>

	<% @posts.each do |post| %>
		<%= render :partial => "layouts/post", :locals => { :post => post, :format => :medium } %>
	<% end %>
<% end %>
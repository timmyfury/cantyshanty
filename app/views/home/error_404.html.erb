<% content_for :title do %>404 Not Here!<% end %>

<% content_for :content do %>
    <div class="entry">
		<h2>404 Not Here!</h2>
		<div class="image">The page you were looking for isn't here. Try one of these random images instead.</div>
	</div>

    <% @posts.each do |post| %>
    	<div class="entry">
    		<h2><a href="<%= short_url(:slug => post.slug) %>"><%= post.title %></a></h2>
    		<ul><% post.tags.each do |tag| %><li><a href="<%= tag_url(:slug => tag.name) %>"><%= tag %></a></li><% end %></ul>
    		<div class="image"><a href="<%= short_url(:slug => post.slug) %>" title="<%= post.title %>"><%= image_tag post.image.url(:large), :alt => post.title %></a></div>
    	</div>
    <% end %>

    <div id="footer">
    	<p class="copyright">&copy; Images are copyright of their respective owners. I just don't know who they are.</p>
    </div>
<% end %>

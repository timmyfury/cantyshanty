/*
	Core
**********************************************************************/
body {
	background: #900;
	color: #fff;
	font-family: "Helvetica Neue", Helvetica, arial, sans-serif;
	font-weight: 200;
	margin: 0;
	padding: 0;
	text-align: center;
}
a,
a:hover,
a:focus {
	color: #fff;
	text-decoration: none;
}

/*
	Forms
**********************************************************************/
.field { font-size: 20px; padding: 15px 0; }
.field label { display: block; }
.field input { font-size: 20px; padding: 5px; }

.actions { padding: 15px 0; }
.actions input { font-size: 30px; }

@media screen and (max-width: 480px) {
	.field label,
	.field input {
		width: 440px;
	}
}

@media screen and (max-width: 320px) {
	.field label,
	.field input {
		width: 280px;
	}
}

/*
	Media Queries
**********************************************************************/
@media screen and (max-width: 480px){
	body {
		width: 480px;
	}
}

@media screen and (max-width: 320px) {
	body {
		width: 320px;
	}
}

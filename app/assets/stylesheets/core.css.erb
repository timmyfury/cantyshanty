/*
	Core
**********************************************************************/
body {
	background: #900;
	font-family: "Helvetica Neue", Helvetica, arial, sans-serif;
	margin: 0;
	padding: 0;
	text-align: center;
}



h2 {
	margin: 5px 0;
	font-size: 20px;
	color: #444;
}
h2 span {
	color: #999;
	font-size: 30px;
}
a {
	color: #444;
	text-decoration: none;
}
a:hover,
a:focus {
	background: #444;
	color: #fff;
}









/*
	Forms
**********************************************************************/
.field { font-size: 20px; padding: 15px 0; }
.field label { display: block; }
.field input { font-size: 20px; padding: 5px; }

.actions { padding: 15px 0; }
.actions input { font-size: 30px; }

@media screen and (max-width: 480px) {
	.field label,
	.field input {
		width: 440px;
	}
}

@media screen and (max-width: 320px) {
	.field label,
	.field input {
		width: 280px;
	}
}




/*
	Media Queries
**********************************************************************/
@media screen and (max-width: 480px){
	body {
		width: 480px;
	}
}

@media screen and (max-width: 320px) {
	body {
		width: 320px;
	}
}

/*
	General
**********************************************************************/
body {
	margin: 0;
	padding: 0;
}

a {
	color: #1c3260;
	text-decoration: none;
}

a:hover,
a:focus {
	background: #1c3260;
	color: #fff;
}

#header:after,
.entry:after,
.entry ul:after,
#footer:after,
.pagination:after,
.navigation:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

@media screen and (max-device-width: 480px), screen and (max-width: 480px) {
	body {
		width: 480px;
	}
}

@media screen and (max-device-width: 320px), screen and (max-width: 320px) {
	body {
		width: 320px;
	}
}

/*
	Core
**********************************************************************/
body {
	background: #900;
	color: #fff;
	font-family: "Helvetica Neue", Helvetica, arial, sans-serif;
	font-weight: 200;
	margin: 0;
	padding: 0;
	text-align: center;
}
a,
a:hover,
a:focus {
	color: #fff;
	text-decoration: none;
}

/*
	Forms
**********************************************************************/
.field {
	font-size: 20px;
	padding: 15px 0;
	margin: 0 auto;
	width: 400px;
}
.field label { 
	display: block;
}
.field input,
.field textarea {
	font-size: 20px;
	padding: 5px;
	width: 400px;
}
.field textarea {
	height: 23px;
}

.actions { padding: 15px 0; }
.actions input { font-size: 30px; }

@media screen and (max-width: 480px) {
	.field label,
	.field input {
		width: 440px;
	}
}

@media screen and (max-width: 320px) {
	.field label,
	.field input {
		width: 280px;
	}
}

/*
	Media Queries
**********************************************************************/
@media screen and (max-width: 480px){
	body {
		overflow-x: hidden;
		width: 480px;
	}
	.field {
		width: 450px;
	}
	.field input,
	.field textarea {
		width: 450px;
	}
	.not-mobile {
		display: none !important;
	}
}

@media screen and (max-width: 320px) {
	body {
		overflow-x: hidden;
		width: 320px;
	}
	.field {
		width: 290px;
	}
	.field input,
	.field textarea {
		width: 280px;
	}
	.not-mobile {
		display: none !important;
	}
}

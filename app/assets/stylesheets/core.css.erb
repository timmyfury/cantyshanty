/*
	Core
**********************************************************************/
body {
	font-family: "Helvetica Neue", Helvetica, arial, sans-serif;
	margin: 0;
	padding: 0;
	text-align: center;
}

h2 {
	background: #eee;
	margin: 20px 0 5px;
	font-size: 57px;
	color: #1c3260;
}

h2 span {
	color: #999;
	font-size: 30px;
}

a {
	color: #1c3260;
	text-decoration: none;
}

a:hover,
a:focus {
	background: #1c3260;
	color: #fff;
}










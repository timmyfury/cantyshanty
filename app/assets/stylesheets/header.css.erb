/*
	Header
**********************************************************************/
header {
	background: #900;
	display: block;
	margin: 0 auto;
	padding: 0;
	width: 1200px;
}
header h1,
header nav,
header ul,
header li {
	display: block;
	margin: 0;
	padding: 0;
}
header h1 {
	height: 0;
	overflow: hidden;
	text-indent: 100%;
	width: 0;
}
header li {
	background-color: transparent;
	background-position: left center;
	background-repeat: no-repeat;
	float: left;
	margin: 0 45px;
}
header .home { background-image: url('<%= image_path 'icon-home-50x50.png' %>'); margin: 0 45px 0 8px; }
header .about { background-image: url('<%= image_path 'icon-about-50x50.png' %>'); }
header .tags { background-image: url('<%= image_path 'icon-tags-50x50.png' %>'); }
header .twitter { background-image: url('<%= image_path 'icon-twitter-50x50.png' %>'); margin: 0 0 0 45px; }

header li a,
header li a:hover,
header li a:focus {
	color: #FFF;
	display: block;
	font-size: 50px;
	font-weight: 200;
	line-height: 50px;
	margin: 0;
	padding: 20px 0 20px 60px;
}

/*
	Clearfix
**********************************************************************/
header ul:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

/*
	Media Queries
**********************************************************************/
@media screen and (max-width: 480px) {

}

@media screen and (max-width: 320px) {
	header {
		margin: 0;
		width: 320px;
	}
	header li,
	header .home,
	header .twitter {
		background-position: center center;
		background-repeat: no-repeat;
		margin: 0;
	}
	header li a,
	header li a:hover,
	header li a:focus {
		height: 50px;
		margin: 0;
		overflow: hidden;
		padding: 20px 15px;
		text-indent: -9999px;
		width: 50px;
	}
}


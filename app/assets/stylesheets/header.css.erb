/*
	Header
**********************************************************************/
header {
	background: #900;
	display: block;
	margin: 0;
	padding: 0;
}

header h1,
header nav,
header ul,
header li {
	float: left;
	margin: 0;
	padding: 0;
}

header h1 a,
header li a,
header h1 a:hover,
header li a:hover,
header h1 a:focus,
header li a:focus {
	background-color: transparent;
	background-position: left center;
	background-repeat: no-repeat;
	color: #FFF;
	display: block;
	font-size: 50px;
	font-weight: 200;
	line-height: 50px;
	height: 75px;
	margin: 0 0 0 20px;
	padding: 25px 40px 0 70px;
}

header .home { background-image: url('<%= image_path 'icon-home-50x50.png' %>'); }
header .about { background-image: url('<%= image_path 'icon-about-50x50.png' %>'); }
header .tags { background-image: url('<%= image_path 'icon-tags-50x50.png' %>'); }
header .twitter { background-image: url('<%= image_path 'icon-twitter-50x50.png' %>'); }

/*
	Clearfix
**********************************************************************/
header:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

/*
	Media Queries
**********************************************************************/
@media screen and (max-width: 480px) {
	header {
		width: 480px;
	}
	header h1 a,
	header li a,
	header h1 a:hover,
	header li a:hover,
	header h1 a:focus,
	header li a:focus {
		background-position: center center;
		background-repeat: no-repeat;
		height: 50px;
		margin: 0;
		padding: 20px 22px;
		text-indent: -9999px;
		width: 50px;
	}
}

@media screen and (max-width: 320px) {
	header {
		width: 320px;
	}
	header h1 a,
	header li a,
	header h1 a:hover,
	header li a:hover,
	header h1 a:focus,
	header li a:focus {
		background-position: center center;
		background-repeat: no-repeat;
		height: 50px;
		margin: 0;
		padding: 20px 15px;
		text-indent: -9999px;
		width: 50px;
	}
}
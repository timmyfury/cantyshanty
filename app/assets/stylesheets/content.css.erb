/*
	Content
**********************************************************************/
.content {
	background: #FFF;
	text-align: center;
}
.content h2 {
	font-size: 36px;
	font-weight: 200;
	margin: 0 0 20px;
	padding: 0;
}
.content section {
	color: #444;
	margin: 0 auto;
	padding: 10px 0;
}
.content section article {
	background: #000;
	color: #FFF;
	margin: 30px auto 40px;
	padding: 20px 20px 0 20px;
	text-align: center;
}
.content .image {
	left: -40px;
	margin: 0 0 20px;
	position: relative;
}
.content .image a,
.content .image a:hover,
.content .image a:focus {
	background: transparent;
	border: 0;
	display: block;
	margin: 0;
	padding: 0;
	text-decoration: none;
}
.content .source {
	margin: 0 0 20px;
	padding: 0;
}
.content .source {
	opacity: 0.4;
}
article.none .permanent,
article.public .permanent {
	display: none;
}
article .tags {
	list-style-type: none;
	margin: 0 0 20px;
	padding: 0;
}
article .tags li {
	display: inline;
	line-height: 30px;
	margin: 10px 0;
	padding: 10px;
}

/*
	Tag Cloud
**********************************************************************/
.tag-cloud {
	list-style-type: none;
	margin: 0;
	padding: 0 20px 20px 20px;
}
.tag-cloud a,
.tag-cloud a:hover,
.tag-cloud a:focus {
	color: #444;
}
.tag-cloud li {
	float: left;
	height: 42px;
	line-height: 42px;
}
.tag-cloud a {
	padding: 5px 10px;
}
.tag-cloud .tag-weight-1 { font-size: 12px; }
.tag-cloud .tag-weight-2 { font-size: 16px; }
.tag-cloud .tag-weight-3 { font-size: 20px; }
.tag-cloud .tag-weight-4 { font-size: 24px; }
.tag-cloud .tag-weight-5 { font-size: 28px; }
.tag-cloud .tag-weight-6 { font-size: 32px; }
.tag-cloud .tag-weight-7 { font-size: 36px; }
.tag-cloud .tag-weight-8 { font-size: 42px; }

/*
	Clearfix
**********************************************************************/
section:after,
article:after,
.tag-cloud:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

/*
	Media Queries
**********************************************************************/
@media screen and (max-width: 480px) {
	.content h2 {
		font-size: 20px;
	}
	.content section article {
		margin: 10px auto 20px;
		width: 400px !important;
	}
	.content .image img {
		width: 480px !important;
		height: auto !important;
	}
}

@media screen and (max-width: 320px) {
	.content h2 {
		font-size: 20px;
	}
	.content section article {
		margin: 10px auto 20px;
		width: 240px !important;
	}
	.content .image img {
		width: 320px !important;
		height: auto !important;
	}
}






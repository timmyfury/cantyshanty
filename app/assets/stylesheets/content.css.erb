/*
	Content
**********************************************************************/
.content {
	background: #FFF;
	text-align: left;
}
.content h2 {
	font-size: 36px;
	font-weight: 200;
	margin: 0;
	padding: 20px;
}
.content section {
	color: #444;
	margin: 0 auto;
	padding: 10px 0;
	width: 1120px;
}
.content section article {
	background: #000;
	color: #FFF;
	float: left;
	text-align: center;
}
.content section article .image {
	background-position: center center;
	background-repeat: no-repeat;
}
.content .image a,
.content .image a:hover,
.content .image a:focus {
	background: transparent;
	border: 0;
	display: block;
	margin: 0;
	overflow: hidden;
	padding: 0;
	text-decoration: none;
	text-indent: 100%;
}
article.none .permanent,
article.public .permanent {
	display: none;
}


/*
	Medium Entries
**********************************************************************/
article.medium {
	height: 400px;
	margin: 10px 20px;
	padding: 20px 60px;
	width: 400px;
}
article.medium .image {
	height: 400px;
	width: 400px;
}
article.medium h2,
article.medium .tags,
article.medium .source {
	display: none;
}

/*
	Large Entries
**********************************************************************/
article.large {
	margin: 10px 0;
	padding: 0 0;
	width: 1120px;
}
article.large .tags {
	list-style-type: none;
	margin: 0;
	padding: 20px;
}
article.large .tags li {
	display: inline;
	margin: 10px 0;
	padding: 10px;
}

/*
	Tag Cloud
**********************************************************************/
.tag-cloud {
	list-style-type: none;
	margin: 0;
	padding: 0 20px 20px 20px;
}
.tag-cloud a,
.tag-cloud a:hover,
.tag-cloud a:focus {
	color: #444;
}
.tag-cloud li {
	float: left;
	height: 42px;
	line-height: 42px;
}
.tag-cloud a {
	padding: 5px 10px;
}
.tag-cloud .tag-weight-1 { font-size: 12px; }
.tag-cloud .tag-weight-2 { font-size: 16px; }
.tag-cloud .tag-weight-3 { font-size: 20px; }
.tag-cloud .tag-weight-4 { font-size: 24px; }
.tag-cloud .tag-weight-5 { font-size: 28px; }
.tag-cloud .tag-weight-6 { font-size: 32px; }
.tag-cloud .tag-weight-7 { font-size: 36px; }
.tag-cloud .tag-weight-8 { font-size: 42px; }

/*
	Clearfix
**********************************************************************/
section:after,
article:after,
.tag-cloud:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

/*
	Media Queries
**********************************************************************/
@media screen and (max-width: 480px) {

}

@media screen and (max-width: 320px) {
	.content {
		background: #FFF;
		overflow: hidden;
		text-align: left;
		width: 320px;
	}
	.content h2 {
		font-size: 24px;
		margin: 0;
		padding: 10px 20px;
	}
	.content section {
		color: #444;
		margin: 0 auto;
		padding: 5px;
		width: 310px;
	}
	.content section article .image {
		background-size: contain;
	}

	article.medium {
		height: 135px;
		margin: 5px;
		padding: 5px;
		width: 135px;
	}
	article.medium .image {
		height: 135px;
		width: 135px;
	}

	article.large {
		margin: 5px;
		padding: 5px;
		position: relative;
		width: 290px;
	}
	article.large .image {
		left: -15px;
		overflow: hidden;
		position: relative;
		width: 320px;
	}
	article.large .tags {
		margin: 0;
		padding: 20px;
		width: 250px;
	}
	article.large .tags li {
		display: inline;
		margin: 10px 0;
		padding: 20px 10px;
	}
}






/*
	Footer
**********************************************************************/
#footer {
	background: #eee;
	border-top: 20px solid #ccc;
	display: block;
	font-size: 30px;
	margin: 0;
	padding: 20px;
	position: relative;
	text-align: center;
}
#footer .prev {
	float: left;
}
#footer .next {
	float: right;
}

@media screen and (max-device-width: 480px), screen and (max-width: 480px) {
	#footer {
		font-size: 20px;
		padding: 20px 15px;
		width: 470px;
	}
}

@media screen and (max-device-width: 320px), screen and (max-width: 320px) {
	#footer {
		font-size: 20px;
		padding: 20px 15px;
		width: 290px;
	}
}

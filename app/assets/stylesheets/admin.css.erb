/*
	Navigation
**********************************************************************/
.navigation {
	background: #eee;
	border-top: 20px solid #ccc;
	color: #999;
	font-size: 30px;
	line-height: 32px;
	margin: 0 0 20px 0;
	padding: 10px;
}
.navigation ul {
	display: block;
	margin: 0;
	padding: 0;
}

.navigation li {
	display: block;
	float: left;
	list-style-type: none;
	margin: 10px;
	padding: 0;
}
.navigation li a {
	display: block;
	margin: 0;
	padding: 12px 14px 10px;
}

.navigation li.active a {
	background: #1c3260;
	color: #FFF;
}

.navigation li.search form {
	margin: 0;
	padding: 7px;
}
.navigation li.search input {
	border: 1px solid #ccc;
	border-radius: 3px;
		-moz-border-radius: 3px;
		-webkit-border-radius: 3px;
	font-size: 20px;
	margin: 0;
	padding: 5px;
	position: relative;
}
.navigation ul li.show-more-options {
	display: none;
}




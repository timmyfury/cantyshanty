/*
	Forms
**********************************************************************/
.field { font-size: 20px; padding: 15px 0; }
.field label { display: block; }
.field input { font-size: 20px; padding: 5px; }

.actions { padding: 15px 0; }
.actions input { font-size: 30px; }

@media screen and (max-device-width: 480px), screen and (max-width: 480px) {
	.field label,
	.field input {
		width: 440px;
	}
}

@media screen and (max-device-width: 320px), screen and (max-width: 320px) {
	.field label,
	.field input {
		width: 280px;
	}
}


/*
	uploader
**********************************************************************/
.uploader .target {
	background: #EEE;
	border: #000 dotted 1px;
	height: 200px;
/*	width: 500px;*/
}
.uploader-over .target {
	background: #F7F4A0;
}
.uploader .instructions {
	font-size: 25px;
	line-height: 27px;
	margin: 65px 20px 10px;
	text-align: center;
}
.uploader .status {
	color: #777;
	font-size: 20px;
	line-height: 22px;
	margin: 10px 20px;
	text-align: center;
}
.uploader .status span {
	color: #BBB;
}

.file {
	display: none;
}

.uploader .file-list img {
	background: url("<%= asset_path 'loader.gif' %>") center center no-repeat;
	border: 1px solid #1c3260;
	display: block;
	min-height: 100px;
	width: 200px;
}
.uploader .file-list {
	border-collapse: collapse;
	margin: 10px 0 0;
	width: 100%;
}
.uploader .file-list td {
	border-top: 1px solid #1c3260;
	margin: 0;
	padding: 5px;
}
.uploader .file-list td.full {
	width: 100%;
}